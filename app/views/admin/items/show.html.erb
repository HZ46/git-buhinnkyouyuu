<section class="inner">
	<div class="text-center">
		<h2 class="section-ttl">商品詳細</h2>
		<div class="flex">
				<div class="image_field">
					<%= image_tag @item.image, size: "200x200" %>
				</div>
			</div>
			<br><br>
			<center>
			<table border="1" style="border-collapse: collapse">
				<thead>
					<tr>
						<th></th>	
						<th></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>商品名</td>
						<td><%= @item.name %></td>
					</tr>
					<tr>
						<td>商品説明</td>
						<td><%= @item.introduction %></td>
					</tr>
					<tr>
						<td>在庫状況</td>
						<td>
							<% if @item.is_active? %>
								<span class="text-active">在庫あり</span>
							<% else %>
								<span class="text-invalid">在庫なし</span>							
							<% end %>
						</td>
					</tr>
				</tbody>
			</table>
			</center><br><br>
			<div class="flex align-center pl5">
				<%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
			</div>
		</div>
	</div>
</section>