<h2>商品一覧<%#= @all_items_count %></h2>
			<div class="search-form">
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.text_field :keyword, value: @keyword %>
    <%= f.submit "検索" %>
  <% end %>
</div>
			<h3 class="text-right"><%= link_to "+", new_admin_item_path, class: "new_admin_item" %></h3>
			 <% @items.each do |item| %>
			  <%= link_to admin_item_path(item) do %>
			   </p>
			  <% if item.image.attached? %>
			    <%= image_tag item.image, size: "100x100" %>
			  <% else %>
			    <%= image_tag 'no_image', size: "100x100" %>
			  <% end %>
			   <p><%= item.name %></p>
			   <p><%= item.amount %></p>
			  	<p>
				<% if item.is_active? %>
					<span class="text-active">在庫あり</span>
				<% else %>
					<span class="text-invalid">在庫なし</span>
				<% end %>
			 <% end %>
			<% end %>

			<%= will_paginate @items, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>

				<% if @items.first %> <!-- @item.existsと同義、SQL1個分削減(?) -->
			<%#= paginate @items %>
		<% else %>
			<h3>対応する商品はありませんでした。</h3>
		<% end %>