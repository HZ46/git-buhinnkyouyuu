<section class="inner">
	<h2 class="section-ttl">注文履歴詳細</h2>
	<table class="order_info mb3 has_border">
		<caption class="fz18 text-left">注文情報</caption>
		<thead>
			<tr>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>注文日時</td>
				<td><%= @order.created_at.strftime("%Y/%m/%d %H:%M:%S") %></td>
			</tr>
			<tr>
				<td>購入者</td>
				<td><%= link_to @department.name,admin_department_path %></td>
			</tr>
			<tr>
				<td>配送先</td>
				<td>
					<%= @order.delivery_department %><br>
				</td>
			</tr>
			<tr>
				<td>
					<%#= form_with model:@order, url: admin_order_path(@order) do |f| %>
						<%#= f.select :status, Order.statuses.keys.map {|k| [I18n.t("enums.order.status.#{k}"), k]} %>
						<%#= f.submit "更新", class: "btn btn-primary" %>
					<%# end %>
				</td>
			</tr>
		</tbody>
	</table>
	<div class="flex">
		<table class="admin_order_details mr2 has_border">
			<caption class="fz18 text-left">注文内容</caption>
			<thead>
				<tr>
					<th>商品名</th>
					<th>数量</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @order_details.each do |order_detail| %>
					<tr>
						<td><%= link_to order_detail.item.name, admin_item_path(order_detail.item) %></td>
						<td class="text-center"><%= order_detail.amount %></td>

						<td>
							<%= form_with model: order_detail, url: admin_order_detail_path(order_detail) do |f| %>
								<%= f.select :making_status, options_for_select(OrderDetail.making_statuses.keys.map {|k| [I18n.t("enums.order_detail.making_status.#{k}"), k]}, order_detail.making_status) %>
								<%= f.submit "更新", class: "btn btn-primary" %>
							<% end %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</section>