    <p class="text-active"><%= flash[:notice] %></p>
  <% end %>
  <center>
	<h2>部門ページ</h2>
		<table>
				<tr>
					<th>部門名</th>
					<td><%= @department.name %></td>
				</tr>
			</tbody>
		</table><br>
		<table>
	  ブックマーク一覧
	  <tr>
	    <th>部品名</th>
	  </tr>
