<section class="wrapper flex">
	<div class="content">
		<h2 class="section-ttl">商品一覧</h2>
		<center>
			<div class="search-form">
		        <%= form_with url: search_path, method: :get, local: true do |f| %>
			    <%= f.text_field :keyword, value: @keyword %>
			    <%= f.submit "検索",class: "btn btn-primary" %>
		        <% end %>
		    </div>
		   </center>

<left>
		<% if @items.first %> <!-- @item.existsと同義、SQL1個分削減(?) -->
			<div class="items">
				<% @items.each do |item| %>
					<%= link_to item_path(item) do %>
						<%= image_tag item.image, format: "jpeg", fallback: "no-image.png", size: "300x300" %>
						<p>部品名</p>
						<p><%= item.name %></p>
						<p>在庫状況</p>
						<p>
							<% if item.is_active? %>
								<span class="text-active">在庫あり</span>
							<% else %>
								<span class="text-invalid">在庫なし</span>
							<% end %>
						</p>
					<% end %>
				<% end %>
				</left>
			<%= will_paginate @items, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>
		 </div>
		<% else %>
			<h3>対応する商品はありませんでした。</h3>
		<% end %>
	</div>
</section>