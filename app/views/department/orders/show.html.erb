<section class="inner">
	<h2 class="section-ttl">注文履歴詳細</h2>
	<center>
		<caption class="fz18 text-left">注文情報</caption>
		<table border="1">
		<thead>
			<tr>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>注文日</td>
				<td><%= @order.created_at.strftime("%Y年%m月%d日") %></td>
			</tr>
			<tr>
				<td>配送先</td>
				<td>
					<%= @order.delivery_department %>
				</td>
			</tr>
			<tr>
				<td>ステータス</td>
				<td><%= @order.status_i18n %></td>
			</tr>
		</tbody>
	</table><br>
	<div class="flex">
		<caption class="fz18 text-left">注文内容</caption>
		<table border="1">
			<thead>
				<tr>
					<th colspan="2"><center>商品名</center></th>
					<th>数量</th>
				</tr>
			</thead>
			<tbody>
				<% @order.order_details.includes(:item).each do |order_detail| %>
					<% item = order_detail.item %>
					<tr>
						<td>
							<%= image_tag item.image, format: "jpeg", fallback: "no-image.png", size: "100x100" %>
						<center>
						<%= link_to item.name, item_path(item) %></td>
						<td></td>
						<td class="text-center"><%= order_detail.amount %></center></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</center>
</section>
